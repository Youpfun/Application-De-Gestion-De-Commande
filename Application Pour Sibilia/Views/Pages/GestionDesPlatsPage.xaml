<Page x:Class="Application_Pour_Sibilia.Views.Pages.GestionDesPlatsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Application_Pour_Sibilia.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="GestionDesPlatsPage"
    d:DataContext="{d:DesignInstance local:GestionDesPlatsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d" Cursor="">

    <Grid Cursor="">
        <ui:TextBox x:Name="textMotClefPlat" HorizontalAlignment="Left" Margin="10,34,0,0" TextWrapping="Wrap" Text="" PlaceholderText="Rechercher un Plat" VerticalAlignment="Top" Width="164" TextChanged="textMotClefPlat_TextChanged"/>
        <DataGrid x:Name="rePlat" Margin="10,101,10,24" AutoGenerateColumns="False"
                  IsReadOnly="True" ItemsSource="{Binding LesPlats}">
            <DataGrid.Columns>
                <DataGridTextColumn  
                    Width="*"
                    Binding="{Binding NomPlat, ValidatesOnExceptions=True}"
                    Header="Nom du Plat" />
                <DataGridTextColumn  
                    Width="100"
                    Binding="{Binding PrixUnitaire, ValidatesOnExceptions=True, StringFormat=C2}"
                    Header="Prix Unitaire" />
                <DataGridTextColumn  
                    Width="120"
                    Binding="{Binding DelaiPreparation, ValidatesOnExceptions=True}"
                    Header="Délai Préparation (min)" />
                <DataGridTextColumn  
                    Width="110"
                    Binding="{Binding NbPersonnes, ValidatesOnExceptions=True}"
                    Header="Nb Personnes" />
                <DataGridTextColumn  
                    Width="110"
                    Binding="{Binding NumSousCategorie, ValidatesOnExceptions=True}"
                    Header="Sous-Catégorie" />
                <DataGridTextColumn  
                     Width="80"
                     Binding="{Binding NumPeriode, ValidatesOnExceptions=True}"
                     Header="Période" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel x:Name="formulairePlat" Visibility="Collapsed"  Background="#FF8B8B8B" Margin="0,101,0,72">
            <ui:TextBox x:Name="inputNomPlat" PlaceholderText="Nom du Plat"/>
            <ui:TextBox x:Name="inputPrixUnitaire" PlaceholderText="Prix Unitaire"/>
            <ui:TextBox x:Name="inputDelaiPreparation" PlaceholderText="Délai de Préparation (minutes)"/>
            <ui:TextBox x:Name="inputNbPersonnes" PlaceholderText="Nombre de Personnes"/>
            <ui:TextBox x:Name="inputNumSousCategorie" PlaceholderText="Numéro Sous-Catégorie"/>
            <ui:TextBox x:Name="inputNumPeriode" PlaceholderText="Numéro Période"/>
        </StackPanel>
        <ui:Button x:Name="buttonNouveau" Width="174" Height="54"
            FontSize="16" FontWeight="Bold"
            Background="#D0021B" Foreground="White"
            VerticalAlignment="Top" Margin="226,22,0,0" Click="buttonNouveau_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Nouveau plat" VerticalAlignment="Center"/>
            </StackPanel>
        </ui:Button>
        <ui:Button x:Name="buttonModifier" Width="174" Height="54"
            FontSize="16" FontWeight="Bold"
            Background="#D0021B" Foreground="White"
            VerticalAlignment="Top" Margin="419,22,0,0" Click="buttonModifier_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="&#xE104;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Modifier Plat" VerticalAlignment="Center"/>
            </StackPanel>
        </ui:Button>
        <ui:Button x:Name="buttonSupprimer" Width="174" Height="54"
            FontSize="16" FontWeight="Bold"
            Background="#D0021B" Foreground="White"
            VerticalAlignment="Top" Margin="598,22,0,0" Click="buttonSupprimer_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="&#xE107;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Supprimer plat" VerticalAlignment="Center"/>
            </StackPanel>
        </ui:Button>
    </Grid>
</Page>