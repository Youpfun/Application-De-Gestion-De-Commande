<Page x:Class="Application_Pour_Sibilia.Views.Pages.ConsulterCommandePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Application_Pour_Sibilia.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ConsulterCommandePage"
    d:DataContext="{d:DesignInstance local:GestionClientPage,IsDesignTimeCreatable=False}" 
    d:DesignHeight="450"
    d:DesignWidth="800"
   
    mc:Ignorable="d">

    <Grid Margin="0">
        <Frame x:Name="FrameConsulterCommande" NavigationUIVisibility="Hidden"/>


        
        <ui:Button x:Name="button_Ajourdhui" Width="120" Height="34"
                FontSize="16" FontWeight="Bold"
                Background="#D0021B" Foreground="White"
                VerticalAlignment="Top" Margin="425,20,0,0" Click="button_Ajourdhui_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Aujourd'hui" VerticalAlignment="Center"/>
            </StackPanel>
        </ui:Button>
        <ui:Button x:Name="button_Toutes" Width="120" Height="34"
        FontSize="16" FontWeight="Bold"
        Background="#D0021B" Foreground="White"
        VerticalAlignment="Top" Margin="555,20,0,0" Click="button_Toutes_Click">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Toutes" VerticalAlignment="Center"/>
            </StackPanel>
        </ui:Button>

    </Grid>

</Page>
